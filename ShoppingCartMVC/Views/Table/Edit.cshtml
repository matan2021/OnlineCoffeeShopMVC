@model ChenkaCoffeeShop.Models.tblTable

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4 style="margin-left:20px;color:white">Update Table</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.tableId)
    <div style=" margin-left:15px;color:white">
        @Html.ActionLink("Show Available Sits", "Index", "Sit")
        @Html.ActionLink("Add Sits", "Create", "Sit")
    </div>
    <div class="form-group">
        Area:
        <div class="col-md-3">
            @Html.EditorFor(model => model.area, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input style="background-color:red;" type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
</div>
    <p>@TempData["msg"]</p>
}
<div style="margin-left:15px">
    @Html.ActionLink("Back to List", "Index")
</div>

