@model ChenkaCoffeeShop.Models.tblTable

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <div class="container">
        <h2 style="color:white">Add Table</h2>
        <div class="row">
            <div class="col-lg-4">
                <form class="bg-white p-5 contact-form">
                    <div style="color:white" class="form-group">
                        <span>Choose Area:</span>
                        @Html.TextBoxFor(m => m.area, new { @class = "form-control" })
                        <input style="background-color:red; margin-top:20px" type="submit" value="Add Table" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>
            </div>
        </div>
    </div>
}