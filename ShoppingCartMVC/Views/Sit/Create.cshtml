@model ChenkaCoffeeShop.Models.tblSit

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Sit", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <h2 style="color:white"> Add Sit</h2>
        <div class="row">
            <div class="col-lg-4">
                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span style="color:white">Table Numbers:</span>
                        @Html.DropDownListFor(m => m.tableId, ViewBag.TableList as SelectList, "--- Select Table ---")
                    </div>
                    <div class="form-group">
                        <input style="background-color:red;" type="submit" value="Add Sit" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
    </div>
}

