@model ChenkaCoffeeShop.Models.tblUser


@using (Html.BeginForm())
{

<div class="container">
    <a style="color : red; font-size:40px" ; class="navbar-brand">Register</a>
    <div class="row">
        <div class="col-lg-4">


            <form class="bg-white p-5 contact-form">
                <div class="form-group">
                    <a style="color:mediumaquamarine;font-size:large;class=" navbar-brand">Name </a>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <a style="color:mediumaquamarine;font-size:large;class=" navbar-brand">Email </a>>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <a style="color:mediumaquamarine;font-size:large;class=" navbar-brand">Password </a>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input style="background-color:red;" type="submit" value="Register" class="btn btn-primary py-3 px-5">
                </div>
            </form>
            <h3 style="color:red;">@TempData["msg"]</h3>
        </div>
        <div class="image">
            <img src="~/images/pg2.png" style="position:center" alt="" />
        </div>
    </div>

</div>
        }
