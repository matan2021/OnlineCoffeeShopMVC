@model ChenkaCoffeeShop.Models.tblProducts
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype="multipart/form-data"}))
{
    <div class="container">
        <h2 style="color:white"> Add A New Product</h2>
        <div class="row">
            <div class="col-lg-4">
                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span>Name:</span>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span style="color:white">Categories:</span>
                        @Html.DropDownListFor(m => m.CatId, ViewBag.CatList as SelectList, "-- Select Category ---")
                    </div>
                    <div class="form-group">
                        <span style="color:white">Description:</span>
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span style="color:white">Unit Price:</span>
                        @Html.TextBoxFor(m => m.Unit, new { @class = "form-control" })
                    </div>
                    <div class="form-group" style="color:white">
                        <span style="color:white">Select Image:</span>
                      <input type="file" name="Image" />
                    </div>
                    <div class="form-group">
                        <input style="background-color:red;" type="submit" value="Add Product" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>
            </div>
        </div>
    </div>
}
